{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build and Run C++",
        "type": "shell",
        "command": "g++",
        "args": [
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ],
        "detail": "Generated task to build C++ code"
      },
      {
        "label": "Run C++",
        "type": "shell",
        "command": "${fileDirname}/${fileBasenameNoExtension}",
        "dependsOn": "Build and Run C++",
        "problemMatcher": []
      }
    ]
  }
  






